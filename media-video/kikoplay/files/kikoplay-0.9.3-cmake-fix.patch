+function(include_sub_directories_recursively ROOT_DIR)
+    if (IS_DIRECTORY ${ROOT_DIR})
+        include_directories(${ROOT_DIR})
+    endif()
+
+    file(GLOB SUB_LIST RELATIVE ${ROOT_DIR} ${ROOT_DIR}/*)
+    foreach(SUB ${SUB_LIST})
